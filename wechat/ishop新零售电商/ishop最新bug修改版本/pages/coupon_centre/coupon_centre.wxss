page {
  background: #f6f6f6;
}

.board {
  background: rgba(0, 0, 0, 0.5);
  top: 76rpx;
  position: fixed;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.wrap-tic {
  width: 100%;
  height: auto;
}

.wrap-tic .tablist {
  margin-top: 2prx;
  margin-bottom: 2rpx;
  /* width: 100%; */
  height: auto;
  padding-right: 70rpx;
  overflow: hidden;
  position: relative;
}

.tablist > view {
  width: 100%;
}

.more {
  border-left: 2rpx solid #eee;
  position: absolute;
  width: 70rpx !important;
  height: 70rpx;
  right: 0;
  top: 0;
  text-align: center;
  background: white;
}

.tablist image {
  width: 20rpx;
  height: 12rpx;
  /* right: 20rpx;
  top: 50%;
  margin-top: -6rpx; *//* transform: rotate(180deg); */
}



/* .tablist .swiper {
  padding: 0 3%;
  overflow: hidden;
  background: white;
  text-align: center;
  height: 70rpx;
} */

.wrap-tic .swiper-slide {
  text-align: center;
  font-size: 14px;
  line-height: 70rpx;
  border-radius: 4px;
  margin: 0 10rpx;
}

.swiper-slide text {
  position: relative;
  display: inline-block;
  margin:0 20rpx;
}

.active text {
  color: #e73c0a;
}

.active text::after {
  content: '';
  width: 100%;
  height: 4rpx;
  background: #e73c0a;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}

.classify {
  background: white;
  position: fixed;
  top: 72rpx;
  width: 100%;
  left: 0;
  z-index: 10;
  padding-bottom: 2%;
}

.classify_item {
  width: 22.5%;
  text-align: center;
  float: left;
  margin: 2% 0 0 2%;
  background: #f6f6f6;
  color: #666;
  font-size: 26rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
}

.empty {
  margin-top: 30%;
  text-align: center;
  font-size: 34rpx;
}

.empty image {
  width: 356rpx;
  height: 328rpx;
}

.center {
  width: 94%;
  padding: 0 3%;
}

.main {
  margin-top: 1%;
  overflow: hidden;
  position: relative;
}

.main image {
  width: 100%;
  height: 244rpx;
}

.main .left {
  width: 35%;
  text-align: center;
  position: absolute;
  top: 50%;
  margin-top: -37rpx;
  left: 0;
}

.get {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #bfbfbf;
}

.main .price {
  font-size: 32rpx;
  color: #bfbfbf;
}

.main .price text {
  font-size: 56rpx;
}

.main .right {
  width: 50%;
  top: 13%;
  left: 248rpx;
  position: absolute;
}

.main .right .dress {
  color: #bfbfbf;
  font-size: 30rpx;
  line-height: 1.5;
  height: 88rpx;
}

.main .right .num {
  color: #e73c0a;
  font-size: 28rpx;
  line-height: 1.8;
}

.main .right .use {
  color: #bfbfbf;
  font-size: 26rpx;
  line-height: 2.7;
  overflow: hidden;
}

.main .right .use text {
  float: left;
  white-space: pre;
}

.main .right .use image {
  width: 22rpx;
  height: 14rpx;
  float: left;
  margin-top: 30rpx;
}

.none {
  display: none;
}

.yellow {
  color: #fec447 !important;
}
