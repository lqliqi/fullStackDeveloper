<wxs module="util" src="../../utils/util.wxs" />
<view>

  <view class='board' hidden='{{!is_open}}'></view>
  <view class='tablist'>
    <view>
      <!-- <swiper display-multiple-items='3' class='swiper'>
        <block wx:for="{{type_list}}" wx:for-index="idx">
          <swiper-item>
            <view class='swiper-slide {{currentNavtab==idx ?"active":""}}' data-idx='{{idx}}' data-item='{{item}}' bindtap='switchTab'>
              <text>{{item.title}}</text>
            </view>
          </swiper-item>
        </block>
      </swiper> -->
      <scroll-view scroll-x scroll-into-view='{{scroll_id}}' style=" white-space: nowrap; display: flex;background:white">
        <view id='a{{idx}}' wx:for="{{type_list}}" wx:for-index="idx" class='swiper-slide {{currentNavtab==idx ?"active":""}}' style='display:inline-block' data-idx='{{idx}}' data-item='{{item}}' bindtap='switchTab'>
          <text>{{item.title}}</text>
        </view>
      </scroll-view>
    </view>
    <view class='more' bindtap='changeOpen'>
      <image style="{{is_open?'transform: rotate(180deg);':''}}" src='/images/view_classily_bottom.png'></image>
    </view>
  </view>

  <view class='classify' hidden='{{!is_open}}'>
    <view wx:for="{{type_list}}">
      <view class='classify_item' bindtap='clickItem' data-idx='{{index}}' data-item='{{item}}'>{{item.title}}</view>
    </view>
  </view>

  <scroll-view class='second_tablist' scroll-x>
    <view>
      <text wx:for="{{second_tablist}}" data-idx="{{index}}" class="second_tab {{currentSecondTab==index?'cur':''}}" data-id='{{item.id}}' bindtap='switchSecond'>{{item.title}}</text>
    </view>
  </scroll-view>
  <!--商品  -->
  <view class="cate_list_group list_cate_group">
    <view class='cate_list' wx:for="{{goods_list}}">
      <navigator hover-class='none' url='../good_detail/good_detail?id={{item.id}}'>
        <view class='cate_pic' style='position:relative;'>
          <image src='{{util.HTTP + item.thumb_img}}'></image>
          <text class='rank'>{{index+1}}</text>
        </view>
        <view class='cate_det'>
          <view class='cate_title'>{{item.title}}</view>
          <view class='ori_price'>
            <view class='price'>
              <text class='sign'>￥</text>
              <text class='sign'>{{item.price}}</text>
            </view>
            <text class='inter_pri'>销量 {{item.sale_number}}</text>
          </view>
        </view>
      </navigator>
    </view>
  </view>
</view>