page {
  background: #f6f6f6;
}

.wrap {
  position: relative;
}

.header_search {
  width: 100%;
  margin-top: 2rpx;
  padding-top: 20rpx;
  position: relative;
  background: white;
  padding-left: 16rpx;
  height: 76rpx;
}

.header_cate {
  margin-left: 20rpx;
  width: 80%;
  border-radius: 12rpx;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 52rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f6f6f6;
}

.header_search .search {
  position: absolute;
  right: 50rpx;
  top: 50%;
  margin-top: -34rpx;
  font-size: 24rpx;
  line-height: 52rpx;
  padding: 10rpx;
}

.header_cate > view {
  float: left;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header_cate > view text {
  float: left;
}

.header_cate input {
  width: 450rpx;
  float: left;
  padding-left: 40rpx;
  height: 52rpx;
  min-height: 52rpx;
}


.caret {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 4rpx;
  vertical-align: middle;
  border-top: 8rpx solid rgb(174, 174, 174);
  border-right: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
  float: left;
}

.caret.up {
  transform: rotate(180deg);
  margin-bottom: 2px;
}

.center .title {
  font-size: 30rpx;
  line-height: 80rpx;
  padding-left: 3%;
}

.center .hot {
  width: 100%;
  background: white;
  overflow: hidden;
  padding-bottom: 3%;
}

.center .hot > view {
  float: left;
  width: 21.5%;
  margin-left: 2.5%;
  border: 2rpx solid #d0d0d0;
  text-align: center;
  margin-top: 3%;
  font-size: 24rpx;
  padding: 10rpx 0;
  border-radius: 30rpx;
}

.select {
  position: absolute;
  background: rgba(0, 0, 0, 0.4);
  width: 50px;
  text-align: center;
  display: block;
  z-index: 9;
  font-size: 24rpx;
  line-height: 36rpx;
  padding: 6rpx 0;
  color: white;
  top: 94rpx;
  left: 46rpx;
  border-radius: 4rpx;
}

.select > view {
  font-size: 24rpx;
  line-height: 46rpx;
}

.center .history {
  overflow: hidden;
  padding-left: 3%;
  background: white;
}

.center .history image {
  float: left;
  width: 32rpx;
  height: 32rpx;
  margin-top: 24rpx;
}

.center .history text {
  float: left;
  width: 90%;
  margin-left: 2%;
  border-bottom: 2rpx solid #f7f7f7;
  font-size: 24rpx;
  line-height: 80rpx;
  color: #c7c7c7;
}

.clear {
  text-align: center;
  font-size: 30rpx;
  padding: 3% 0;
  background: white;
  color: #c7c7c7;
}
