page{
  background: #f6f6f6;
}

.tab {
  width: 100%;
  overflow: hidden;
  height: auto;
}

.tab .tablist {
  width: 22%;
  float: left;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: auto;
}

.tab .tablist>view {
  height: auto;
}

.tab .tablist #tab_title {
  text-align: center;
  font-size: 28rpx;
  line-height: 4;
  border-bottom: 2rpx solid #eef0f2;
  border-right: 2rpx solid #f3f3f3;
}

.tab .tablist view text {
  display: block;
  background: white;
}

.tab .tablist .cur {
  background: #f6f6f6;
  border-right: 2rpx solid #f6f6f6;
}

.tab .tablist .cur text {
  color: #e02e24;
  background: #f6f6f6;
}

.tab .tabcon {
  width: 75%;
  margin-left: 2%;
  float: right;
}

.tab .tabcon .title {
  display: inline-block;
  overflow: hidden;
}

.tab .tabcon .title .note {
  font-size: 28rpx;
  line-height: 2;
  white-space: pre;
}

.r_classify {
  overflow: hidden;
  padding-top: 3%;
}

.r_classify > view {
  float: left;
  width: 28%;
  padding: 0 1% 2%;
  text-align: center;
  font-size: 24rpx;
  line-height: 4;
  background: #fff;
}

.r_classify view text {
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
