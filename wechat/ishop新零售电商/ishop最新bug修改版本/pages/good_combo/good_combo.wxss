page {
  background: #f6f6f6;
}

.board {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 101;
}

.combo_list {
  background: white;
  margin-top: 2rpx;
}

.combo_list .center {
  padding: 10rpx 3% 10rpx 250rpx;
  background: white;
  overflow: hidden;
  position: relative;
  border-bottom: 2rpx solid #f0f0f0;
}

.combo_list .center image {
  display: block;
  position: absolute;
  width: 232rpx;
  height: 180rpx;
  top: 10rpx;
  left: 10rpx;
}

.center .right {
  width: 100%;
  height: 196rpx;
}

.center .right .title {
  height: 75rpx;
  padding: 2% 0;
  font-size: 24rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.center .right .size {
  overflow: hidden;
}

.center .right .size > view {
  position: relative;
  width: 78%;
  overflow: hidden;
  float: left;
  font-size: 24rpx;
  line-height: 2;
  background: #f6f6f6;
  padding: 0 3%;
  color: #9c9c9c;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.center .right .size image {
  position: absolute;
  width: 15rpx;
  height: 9rpx;
  right: 10rpx !important;
  left: auto;
  top: 50%;
  margin-top: -4.5rpx;
}

.center .right .size text {
  float: right;
  display: block;
  font-size: 24rpx;
  line-height: 2;
  color: #828282;
}

.center .right .price {
  display: block;
  float: left;
  font-size: 28rpx;
  color: #e73f09;
  line-height: 1.5;
  margin-top: 5rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  background: white;
  width: 100%;
  max-width: 100vh;
  font-size: 28rpx;
  line-height: 64rpx;
}

.footer .total {
  float: left;
  margin-left: 3%;
  font-size: 28rpx;
  line-height: 88rpx;
}

.footer .total text {
  color: #e73f09;
}

.footer .buy {
  
  float: right;
  white-space: pre;
}

.footer .buy .buynow {
  margin-left: 15rpx;
  color: #fff;
  border: 2rpx solid #e73f09;
  font-size: 28rpx;
  line-height: 88rpx;
  background: #e73f09;
  display: inline-block;
  width: 180rpx;
  text-align: center;
}


.spsx {
  position: fixed;
  width: 100%;
  background: white;
  bottom: 0 !important;
  z-index: 102;
  /* display: none; */
}

.spsx .sp {
  height: 70px;
  padding-bottom: 2%;
}

.spsx>view:not(.footer1) {
  padding: 0 3%;
}

.spsx .sp image {
  float: left;
  width: 28%;
  height: 160rpx;
  margin-top: -7%;
  border: 4rpx solid white;
  max-height: 190rpx;
}

.spsx .sp .title_bg {
  float: left;
  width: 65%;
  margin-left: 2%;
}

.spsx .sp > view .title {
  width: 80%;
  padding: 2% 0;
  font-size: 24rpx;
  color: #212121;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.specification {
  font-size: 24rpx;
  color: #999;
}

.specification text {
  max-width: 340rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}

.spsx .price {
  color: #e73f09;
  float: right;
}

.size .size_title {
  font-size: 28rpx;
  line-height: 3;
  border-top: 1px solid #f5f5f5;
}

.size_list {
  overflow: hidden;
}

.size_list > view {
  padding: 0 2%;
  float: left;
  margin-left: 2%;
  text-align: center;
  background: #f6f6f6;
  margin-bottom: 2%;
  font-size: 24rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
  min-width: 20rpx;
}

.spsx .num {
  overflow: hidden;
  border-top: 1px solid #f5f5f5;
  padding: 20rpx 3% !important;
}

.spsx .num > view {
  /* border-top: 1px solid #f5f5f5; *//* padding: 2% 0; */
  overflow: hidden;
  float: left;
}

.spsx .num > view text {
  display: block;
  /* float: left; */
  font-size: 28rpx;
}

.num_border {
  float: right !important;
  overflow: hidden;
  border: 2rpx solid #b3b3b3;
  border-radius: 8rpx;
  width: 180rpx;
}

.border {
  float: left;
  font-size: 14px;
  line-height: 18px;
  width: 32%;
  text-align: center;
}

.border_double {
  border-left: 2rpx solid #b3b3b3;
  border-right: 2rpx solid #b3b3b3;
  float: left;
  font-size: 14px;
  line-height: 18px;
  width: 32%;
  text-align: center;
}

.footer1 {
  width: 100%;
  overflow: hidden;
}

.ljgm {
  color: white;
  display: block;
  float: left;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  line-height: 88rpx;
  background: #e73f09;
}

.cur {
  background: #e73f09 !important;
  color: white !important;
}

.spsx .cancel {
  width: 76rpx;
  height: 76rpx;
  position: absolute;
  right: 3%;
  top: -37rpx;
}
