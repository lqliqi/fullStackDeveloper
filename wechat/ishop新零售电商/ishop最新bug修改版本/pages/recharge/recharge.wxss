page {
  background: #f6f6f6;
}

.pay_way {
  width: 100%;
  height: auto;
  background: white;
  margin-top: 10rpx;
}

.pay_way > view {
  width: 94%;
  margin: 0 auto;
  overflow: hidden;
}

.pay_way .title {
  float: left;
  font-size: 14px;
  line-height: 44px;
}

.pay_way .way {
  float: right;
  font-size: 14px;
  line-height: 44px;
}

.money {
  padding: 0 0 20rpx 60rpx;
  position: relative;
}

.money input {
  display: block;
  font-size: 24rpx;
  line-height: 48rpx;
  border: none;
  outline: none;
  color: #333;
  width: 100%;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 10rpx 0;
}

.money text {
  position: absolute;
  font-size: 48rpx;
  line-height: 68rpx;
  color: #333;
  left: 0;
  top: 0;
}

.confirm {
  width: 94%;
  margin: 60rpx auto 0;
  font-size: 32rpx;
  line-height: 80rpx;
  background: #e73f09;
  text-align: center;
  border-radius: 8rpx;
  color: white;
}
