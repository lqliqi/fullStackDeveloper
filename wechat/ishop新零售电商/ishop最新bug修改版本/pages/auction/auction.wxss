.lx {
  position: absolute;
  right: 48rpx;
  top: 80rpx;
  background: #e73c0a;
  font-size: 24rpx;
  line-height: 48rpx;
  padding: 0 10rpx;
  color: white;
  border-radius: 6rpx;
}

.lx:after {
  display: block;
  content: '';
  border-width: 16rpx 16rpx 16rpx 16rpx;
  border-style: solid;
  border-color: #e73c0a transparent transparent transparent;
  position: absolute;
  left: 40%;
  top: 100%;
}
