page {
  background: #f6f6f6;
}

.center {
  margin-top: 2rpx;
  width: 100%;
  height: 172rpx;
  background: white;
  padding: 1% 0;
  position: relative;
}

.address {
  width: 97%;
  margin-left: 3%;
  padding: 1% 0 2%;
}

.center .choose {
  position: absolute;
  font-size: 28rpx;
  line-height: 2;
  color: #a6a6a6;
  left: 41%;
  top: 31%;
}

.address > text {
  display: block;
  font-size: 28rpx;
  line-height: 2;
  color: #a6a6a6;
}

.address > view {
  font-size: 28rpx;
  line-height: 40rpx;
  padding-right: 3%;
}

.address image {
  width: 12rpx;
  height: 20rpx;
  float: right;
  padding-right: 3%;
}

.good {
  height: 210rpx;
  background: white;
  margin: 2rpx 0 2rpx 0;
  position: relative;
  overflow: hidden;
}

.good image {
  margin-top: 10rpx;
  position: absolute;
  width: 210rpx;
  height: 190rpx;
  margin-left: 30rpx;
}

.good > view {
  height: 100%;
  display: block;
  padding-left: 250rpx;
}

.good .title {
  margin-top: 20rpx;
  height: 72rpx;
  font-size: 28rpx;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.good .pat_price {
  font-size: 26rpx;
  line-height: 36rpx;
}

.good .price {
  position: absolute;
  bottom: 20rpx;
  font-size: 32rpx;
  color: #e73c0a;
}


.footer {
  width: 100%;
  height: 90rpx;
  background: white;
  position: fixed;
  bottom: 0;
}

.footer text {
  font-size: 28rpx;
  margin-top: 17rpx;
  line-height: 90rpx;
  margin-left: 20rpx;
}

.footer .commit {
  width: 180rpx;
  font-size: 28rpx;
  float: right;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  background: #e73c0a;
}

.info {
  background: white;
  overflow: hidden;
  margin-top: 2rpx;
  padding-right: 20rpx;
}

.info text {
  font-size: 28rpx;
  line-height: 3;
  float: right;
}

.price {
  color: #e73c0a;
  float: right;
}

.order_num {
  margin-top: 10rpx;
  background: white;
  padding-left: 20rpx;
  color: #666;
  font-size: 28rpx;
  line-height: 3;
}
