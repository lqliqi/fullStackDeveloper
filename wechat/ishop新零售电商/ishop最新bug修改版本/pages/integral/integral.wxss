page{
  background: #f6f6f6;
}
.center {
  width: 100%;
  height: auto;
  background: white;
}

.main {
  width: 100%;
  position: relative;
}

.main > image {
  width: 100%;
  height: 324rpx;
  display: block;
}

.main .cur {
  position: absolute;
  display: block;
  width: 100%;
  text-align: center;
  top: 50%;
  color: white;
  font-size: 20px;
  line-height: 1.5;
  margin-top: -80rpx;
}

.center .list {
  overflow: hidden;
  background-color: white;
  padding: 3% 0;
  border-bottom: 1px solid #f6f6f6;
}

.center .list .num {
  border-right: 1px solid #eee;
}

.center .list view {
  float: left;
  text-align: center;
  font-size: 14px;
  width: 31.5%;
}

.exchange {
  width: 100%;
  height: 109rpx;
  background: white;
  position: relative;
}

.exchange text {
  text-align: center;
  font-size: 26rpx;
  display: block;
  line-height: 109rpx;
  /* width: 30%;
    background-size: 100% 50%;
    margin: 0px auto; */
}

.exchange_con {
  padding-top: 20rpx;
  background: #f6f6f6;
}

.exchange image {
  width: 215rpx;
  height: 41rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -113rpx;
}

.integral_list {
  width: 100%;
}

.integral_list > view {
  width: 48%;
  margin-left: 1%;
  float: left;
  background: white;
  margin-top: 1%;
  padding-bottom: 2%;
}

.integral_list .goods {
  width: 100%;
  position: relative;
}

.integral_list .goods image {
  height: 360rpx;
  width: 100%;
  display: block;
}

.tip {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.3);
  padding: 1% 4%;
  color: white;
}

.integral_list .title {
  width: 90%;
  margin: 2% auto;
  font-size: 26rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 80rpx;
  color: #212121;
}

.jifen {
    width: 90%;
    margin: 2% auto;
    font-size: 28rpx;
    overflow: hidden;
    color: #e02e24;
}

.jifen text {
    font-size: 24rpx;
    float: right;
    line-height: 40rpx;
    color: white;
    padding: 0 2%;
    border-radius: 4rpx;
    width: 80rpx;
    text-align: center;
    background: #E73F09;
}