.wrap {
  width: 100%;
  height: auto;
  background-color: #f6f6f6;
}

.pay_way {
  width: 100%;
  height: auto;
  background: white;
  margin-top: 10rpx;
}

.pay_way>view {
  width: 94%;
  margin: 0 auto;
  overflow: hidden;
  border-bottom: 2rpx solid #e9e9e9;
}

.pay_way .title {
  float: left;
  font-size: 28rpx;
  line-height: 88rpx;
}

.pay_way .way {
  float: right;
  overflow: hidden;
}

.pay_way .way > view > view {
  overflow: hidden;
  padding: 20rpx 14rpx 20rpx 44rpx;
  display: inline-block;
  font-size: 28rpx;
  line-height: 48rpx;
  font-weight: normal;
  margin-bottom: 0;
}

.pay_way .way>view:first-child {
  margin-left: 0;
}

.pay_way>view:last-child {
  border-bottom: none;
}

.pay_way .way image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-top: 8rpx;
  margin-right: 10rpx;
}

.account {
  float: right;
  text-align: right;
  border: none;
  outline: none;
  font-size: 28rpx;
  line-height: 48rpx;
  padding: 20rpx 0;
}

.money {
  padding: 0 0 20rpx 60rpx;
  position: relative;
}

.money input {
  display: block;
  font-size: 24rpx;
  line-height: 68rpx;
  border: none;
  outline: none;
  color: #333;
  width: 100%;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 10rpx 0;
}

.money .rmb {
  position: absolute;
  font-size: 48rpx;
  line-height: 68rpx;
  color: #333;
  left: 0;
  top: 0;
}

.money > view {
  overflow: hidden;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #999;
  padding: 20rpx 0 0;
}

.money>view text {
  color: #0d89e1;
  float: right;
}

.confirm {
  width: 94%;
  margin: 60rpx auto 0;
  font-size: 32rpx;
  line-height: 80rpx;
  background: #ddd;
  text-align: center;
  border-radius: 8rpx;
  color: #666;
}
