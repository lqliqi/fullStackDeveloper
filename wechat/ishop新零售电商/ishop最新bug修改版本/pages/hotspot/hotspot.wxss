page{
  background: #f6f6f6;
}

.content {
  width: 100%;
  height: auto;
  margin-top: 2rpx;
}

.center {
  background: white;
  width: 94%;
  padding: 2% 3%;
  margin-bottom: 1%;
}

.title {
  width: 100%;
  text-align: center;
  position: relative;
}

.title > view {
  overflow: hidden;
  display: block;
}

.title .cir {
  width: 8rpx;
  height: 8rpx;
  border-radius: 6rpx;
  background-color: #212121;
  margin-top: 14rpx;
  float: left;
}

.title .title_name {
  width: 100%;
  padding: 0 12rpx;
  font-size: 30rpx;
  color: #212121;
  float: left;
}

.title > text {
  display: block;
  position: absolute;
  right: 0%;
  top: 0;
  font-size: 26rpx;
  color: #c4c4c4;
}

.swiper-container {
  width: 100%;
  margin: 0 auto;
  margin-top: 2%;
  overflow: hidden;
}

.swiper-slide {
  width: 30%;
  padding: 0 1.65%;
  flex-shrink: 0;
  height: 100%;
  float: left;
  position: relative;
}

.swiper-slide image {
  height: 200rpx;
  width: 100%;
  display: block;
  border-radius: 12rpx;
}
