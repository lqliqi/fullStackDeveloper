page {
  background: #f6f6f6;
}

.wrap-shoe {
  width: auto;
  background: #f6f6f6;
  height: auto;
}

.wrap-shoe .swiper {
  height: 360rpx;
}

.wrap-shoe .swiper image {
  height: 100%;
  width: 100%;
}

.wrap-shoe .tab {
  width: auto;
  height: 80rpx;
  position: relative;
  border-top: 2rpx solid #e6e6e6;
}

.wrap-shoe .tablist {
  /* height: 80rpx; */
  overflow: hidden;
  white-space: nowrap;
  background: white;
}

.wrap-shoe .tablist .classify {
  padding: 20rpx;
  font-size: 28rpx;
  display: inline-block;
  position: relative;
  color: #727272;
}

.wrap-shoe .tablist .active {
  color: #e73f09;
}

.wrap-shoe .tablist .active::before {
  content: '';
  position: absolute !important;
  width: 80rpx;
  height: 2rpx !important;
  background: #e73f09;
  bottom: 0;
  left: 50%;
  margin-left: -40rpx;
  z-index: 9;
}

.wrap-shoe .tabcon {
  width: 100%;
  height: auto;
  margin-top: 10rpx;
}

.list_group {
  /* width: 100%;  */
  height: auto;
  /* padding: 0 1%; */
  overflow: hidden;
  background: #f6f6f6;
}

.list_group > view {
  width: 49.5%;
  margin-left: 1%;
  float: left;
  background: white;
  margin-bottom: 1%;
  padding-bottom: 10rpx;
}

.list_group > view:nth-of-type(2n+1) {
  margin-left: 0;
}

.list_group > view image {
  width: 100%;
  height: 300rpx;
}

.list_group > view .title {
  width: 94%;
  padding: 0 3%;
  margin: 4px auto;
  font-size: 24rpx;
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.list_group > view .price {
  width: 96%;
  padding: 0 3%;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #e73f09;
}

.list_group view .sale_num {
  line-height: 36rpx;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  float: right;
}

.second_tablist {
  width: 100%;
  overflow: hidden;
  padding: 2% 0;
  border-top: 1px solid #f6f6f6;
  white-space: nowrap;
  height: 60rpx;
  background: white;
}

.second_tab {
  width: auto;
  padding: 10rpx;
  margin-top: 0px;
  margin-left: 20rpx;
  text-align: center;
  font-size: 26rpx;
  border: 2rpx solid #c6c6c6;
  line-height: 2;
  border-radius: 8rpx;
  color: #727272;
}

.wrap-shoe .cur {
  border: 1px solid #e73f09;
  color: #e73f09;
}
