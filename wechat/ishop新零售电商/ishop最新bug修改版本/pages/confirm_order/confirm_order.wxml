<wxs module="util" src="../../utils/util.wxs" />
<view class='wrap'>

  <!--收货地址  -->
  <navigator hover-class='none' url='../manage_address/manage_address'>
    <view class='center'>
      <text class='choose' hidden='{{address.length!=0}}'>选择地址</text>
      <view class='address' hidden='{{address.length==0}}'>
        <text>收货人</text>
        <view>
          <text decode="{{true}}" space="{{true}}">{{address.name}}&nbsp;{{address.phone}}</text>
          <image src='/images/next2.png'></image>
        </view>
        <view>
          <text decode="{{true}}" space="{{true}}">{{address.area_info}}&nbsp;{{address.address}}</text>
        </view>
      </view>
    </view>
  </navigator>

  <view class='shop'>
    <view class='shop_title'>
      <text>{{shop_title}}</text>
      <image src='/images/next2.png'></image>
    </view>
    <view class='good'>
      <view class='left'>
        <image src='{{util.HTTP + good_picUrl}}'></image>
      </view>
      <view class='right'>
        <view class='good_title'>{{good_title}}</view>
        <view class='type'>
          <text hidden='{{size.length!=0}}'></text>
          <text hidden='{{size.length==0}}'>属性规格: {{size}}</text>
          <text class='num'>x{{num}}</text>
        </view>
        <view class='price'>¥{{price}}</view>
      </view>
    </view>
  </view>

  <view class='discounts'>
    <view bindtap='use_coupon' data-index='{{index}}'>
      <text>优惠券</text>
      <view>
        <text>{{coupon}}</text>
        <image src='/images/next2.png' class='next'></image>
      </view>
    </view>
    <!-- <view bindtap='use_redpocket'>
      <text>红包</text>
      <view>
        <text>{{red_pocket}}</text>
        <image src='/images/next2.png' class='next'></image>
      </view>
    </view> -->
    <view>
      <text>运费</text>
      <view>
        <text>¥{{freight_price}}</text>
      </view>
    </view>
    <view>
      <text>买家留言:</text>
      <input placeholder='填写留言信息' bindinput='message'></input>
    </view>
    <view>
      <view>
        <view style='float:left;'>共{{num}}件商品 合计:</view>
        <view class='money'>¥{{total}}</view>
      </view>
    </view>
  </view>


  <view class='footer'>
    <view>
      <text style='float:left;'>总计 : </text>
      <text class='money'>¥{{total}}</text>
    </view>
    <text bindtap='createOrder'>提交订单</text>
  </view>
</view>