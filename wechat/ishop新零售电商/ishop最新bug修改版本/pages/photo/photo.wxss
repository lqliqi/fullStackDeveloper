page {
  background: black;
}

.wrap {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-container {
  width: 100%;
  height: 600rpx;
  overflow: hidden;
}

.swiper-container image {
  width: 100%;
  height: 100%;
  display: block;
}

.footer {
  width: 100%;
  position: absolute;
  height: 90rpx;
  bottom: 0;
}

.footer text {
  color: white;
  font-size: 28rpx;
  margin-left: 5%;
  line-height: 90rpx;
}

.footer image {
  float: right;
  width: 42rpx;
  height: 47rpx;
  margin-top: 22rpx;
  margin-right: 20rpx;
}
