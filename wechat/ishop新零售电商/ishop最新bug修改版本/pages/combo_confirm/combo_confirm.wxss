page {
  background: #f6f6f6;
}

.wrap {
  margin-bottom: 90rpx;
}

.center {
  margin-top: 2rpx;
  width: 100%;
  height: 172rpx;
  background: white;
  padding: 1% 0;
  position: relative;
}

.address {
  width: 97%;
  margin-left: 3%;
  padding: 1% 0 2%;
}

.center .choose {
  position: absolute;
  font-size: 28rpx;
  line-height: 2;
  color: #a6a6a6;
  left: 41%;
  top: 31%;
}

.address > text {
  display: block;
  font-size: 28rpx;
  line-height: 2;
  color: #a6a6a6;
}

.address > view {
  font-size: 28rpx;
  line-height: 40rpx;
  padding-right: 3%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.address image {
  width: 12rpx;
  height: 20rpx;
  float: right;
  padding-right: 3%;
}

.shop {
  margin-top: 2%;
}

.shop .shop_title {
  font-size: 28rpx;
  line-height: 3;
  background: white;
  padding-left: 3%;
  margin-top: 1%;
  overflow: hidden;
}

.shop .shop_title text {
  float: left;
  color: #212121;
  white-space: pre;
}

.shop .shop_title image {
  float: left;
  width: 12rpx;
  height: 20rpx;
  margin-top: 32rpx;
  margin-left: 2%;
}

.good {
  border-bottom: 2rpx solid #fafafa;
  overflow: hidden;
  background: white;
  margin-top: 1%;
  position: relative;
  padding: 10rpx 3% 10rpx 250rpx;
  height: 204rpx;
}

.left {
  position: absolute;
  width: 232rpx;
  height: 184rpx;
  top: 50%;
  margin-top: -92rpx;
  left: 10rpx;
}

.left image {
  width: 100%;
  height: 100%;
  display: block;
}

.right {
  width: 100%;
}

.right .good_title {
  color: #212121;
  width: 100%;
  float: left;
  font-size: 24rpx;
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  margin-top: 10rpx;
  text-align: justify;
}

.right .type {
  font-size: 24rpx;
  line-height: 2;
  color: #b7b7b7;
}

.right .type .num {
  font-size: 28rpx;
  float: right;
}

.right .price {
  overflow: hidden;
  width: 100%;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #e02e24;
}

.discounts {
  width: 100%;
  background: white;
  margin-top: 1%;
  margin-bottom: 20px;
}

.discounts > view {
  padding-left: 3%;
  font-size: 28rpx;
  line-height: 3;
  padding-right: 3%;
  color: #212121;
  overflow: hidden;
  border-top: 2rpx solid #f1f1f1;
}

.discounts > view:first-child {
  border-top: none;
}

.discounts > view > text {
  float: left;
}

.discounts > view > view {
  float: right;
  overflow: hidden;
}

.discounts > view > view text {
  float: left;
  color: #a2a2a2;
  white-space: pre;
}

.discounts .next {
  margin-left: 10rpx;
  width: 12rpx;
  height: 20rpx;
  margin-top: 32rpx;
  float: right;
}

.discounts input {
  width: 450rpx;
  float: left;
  font-size: 28rpx;
  line-height: 3;
  min-height: 84rpx;
  height: 84rpx;
  margin-left: 20rpx;
}

.discounts .more {
  width: 12rpx;
  height: 20rpx;
  float: right;
  margin: 32rpx 0 0 10rpx;
}

.money {
  color: #e73c0a;
  float: left;
}

.footer {
  width: 97%;
  background: white;
  padding: 0 0 0 3%;
  height: 90rpx;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  z-index: 99;
}

.footer > view {
  float: left;
  line-height: 90rpx;
  font-size: 30rpx;
  white-space: pre;
  color: #212121;
}

.footer > text {
  float: right;
  background: #e73f09;
  font-size: 30rpx;
  line-height: 88rpx;
  text-align: center;
  width: 180rpx;
  color: #fff;
}
