page {
  background: #f6f6f6;
}

.cart_head {
  width: 100%;
  overflow: hidden;
  background: #fff;
  margin-top: 2rpx;
}

.board {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 101;
}

.cart_head button {
  float: right;
  margin-right: 3%;
  font-size: 24rpx;
  line-height: 72rpx;
  background: none;
  border: none;
}

.cart_head button::after {
  border: none;
}

.title {
  font-size: 28rpx;
  line-height: 60rpx;
}

.type {
  padding: 3% 3% 0;
  background: white;
  margin-top: 2%;
  position: relative;
}

.type_content {
  padding: 10rpx 3% 10rpx 150rpx;
  background: white;
  margin-top: 2%;
  position: relative;
}

.list {
  overflow: hidden;
}

.list > view {
  width: 23.5%;
  background: #f6f6f6;
  color: #999;
  text-align: center;
  line-height: 70rpx;
  float: left;
  font-size: 28rpx;
  margin-bottom: 3%;
  margin-right: 2%;
}

.list > view:nth-child(4n) {
  margin-right: 0 !important;
}

.content_title {
  position: absolute;
  font-size: 28rpx;
  line-height: 60rpx;
  left: 3%;
  top: 10rpx;
}

.content {
  width: 100%;
  text-align: justify;
  padding-top: 10rpx;
  font-size: 24rpx;
  line-height: 40rpx;
}

.type_content input {
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
  min-height: 60rpx;
}

.phone {
  font-size: 24rpx;
  width: 100%;
  line-height: 60rpx;
  height: 60rpx;
  min-height: 60rpx;
}

.cur {
  color: #e73c0a !important;
}
