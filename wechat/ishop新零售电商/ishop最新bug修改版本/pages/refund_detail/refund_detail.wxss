page {
  background: #f6f6f6;
}

.cart_head {
  width: 100%;
  overflow: hidden;
  background: #fff;
}

.board {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 101;
}

.cart_head button {
  float: right;
  margin-right: 3%;
  font-size: 24rpx;
  line-height: 72rpx;
  background: none;
  border: none;
}

.cart_head button::after {
  border: none;
}

.list {
  background: white;
  margin-top: 1%;
  overflow: hidden;
}

.list > view {
  width: 97%;
  margin-left: 3%;
  font-size: 28rpx;
  line-height: 3.2;
  overflow: hidden;
  border-bottom: 2rpx solid #f0f0f0;
}

.list > view .title {
  float: left;
}

.list > view .content {
  float: left;
  display: block;
  margin-left: 10%;
}

.sale_return {
  font-size: 30rpx;
  height: 90rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 5%;
  border-radius: 8rpx;
  background: #e73c0a;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
