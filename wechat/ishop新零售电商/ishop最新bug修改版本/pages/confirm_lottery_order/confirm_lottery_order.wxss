page {
  background: #f6f6f6;
}

.center {
  margin-top: 2rpx;
  width: 100%;
  height: 172rpx;
  background: white;
  padding: 1% 0;
  position: relative;
}

.address {
  width: 97%;
  margin-left: 3%;
  padding: 1% 0 2%;
}

.center .choose {
  position: absolute;
  font-size: 28rpx;
  line-height: 2;
  color: #a6a6a6;
  left: 41%;
  top: 31%;
}

.address > text {
  display: block;
  font-size: 28rpx;
  line-height: 2;
  color: #a6a6a6;
}

.address > view {
  font-size: 28rpx;
  line-height: 40rpx;
  padding-right: 3%;
}

.address image {
  width: 12rpx;
  height: 20rpx;
  float: right;
  padding-right: 3%;
}

.left {
  float: left;
  width: 30%;
  margin: 10rpx 20rpx 10rpx 3%;
  height: 200rpx;
}

.left image {
  display: block;
  width: 100%;
  height: 100%;
}

.right {
  float: left;
  width: 60%;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}

.footer {
  width: 100%;
  height: 90rpx;
  background: white;
  position: fixed;
  bottom: 0;
}

.footer text {
  font-size: 28rpx;
  margin-top: 17rpx;
  line-height: 90rpx;
  margin-left: 20rpx;
}

.footer .commit {
  width: 180rpx;
  font-size: 28rpx;
  float: right;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  background: #e73c0a;
}
