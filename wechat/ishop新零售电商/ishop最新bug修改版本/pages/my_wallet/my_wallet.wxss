page {
  background: #f6f6f6;
}

.wrap-shop {
  width: 100%;
  height: auto;
  background: #f6f6f6;
}

.wrap-shop .center {
  width: 100%;
  height: auto;
}

.device {
  position: relative;
  margin: 0 auto;
  height: 384rpx;
  padding: 3%;
}

.device swiper-item {
  overflow: hidden;
  z-index: 10;
  /* border-radius:0 0  18rpx 18rpx;  */
}

.device swiper-item>view {
  overflow: hidden;
  border-radius: 16rpx;
  border: 2rpx solid #f6f6f6;
}

.header {
  width: 90%;
  padding: 0 5%;
}

.tips {
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 40rpx;
  line-height: 2;
  position: relative;
  overflow: hidden;
}

.tips image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.tips .info {
  position: absolute;
  text-align: center;
  color: white;
}

.second {
  margin-left: 10rpx;
}

.checked {
  transform: scale(0.9);
}

.title {
  text-align: center;
  background: white;
  color: #333;
  font-size: 32rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}

.title image {
  width: 44rpx;
  display: inline-block;
  height: 34rpx;
}

.title text {
  margin-left: 20rpx;
}

.list_group {
  width: 90%;
  overflow: hidden;
  margin: 2% auto 0;
  background-color: white;
  border-radius: 8px;
}

.list_group .list {
  float: left;
  width: 50%;
  text-align: center;
  padding: 5% 0 3%;
  position: relative;
}

.list_group .list image {
  width: 140rpx;
  height: 140rpx;
  display: block;
  margin: 0 auto;
}

.list_group .list:first-child::before, .list_group .list:nth-child(2)::after {
  background: #f6f6f6;
  width: 100%;
  height: 1px;
  content: '';
  bottom: 0;
  left: 0;
  position: absolute;
}

.list_group .list:first-child::after, .list_group .list:nth-child(3)::after {
  background: #f6f6f6;
  height: 100%;
  width: 1px;
  content: '';
  bottom: 0;
  right: 0;
  position: absolute;
}

.list_group .list .num {
  font-size: 24rpx;
  line-height: 40rpx;
  display: block;
  height: 40rpx;
  /* color: #929292; */
}

.list_group .list .tip {
  font-size: 26rpx;
  height: rpx;
  line-height: 36rpx;
  color: #212121;
  margin-top: 12rpx;
}

.board_con {
  width: 74%;
  top: 22%;
  left: 13%;
  z-index: 11;
  padding-bottom: 45rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  position: absolute;
}

.board_con .type {
  color: white;
  font-size: 44rpx;
  line-height: 152rpx;
  text-align: center;
  background: linear-gradient(to right, #f94431, #fb7026);
}

.board_con .way {
  width: 70%;
  margin: 0 auto;
  /* padding: 5% 0; */
}

.board_con .way > view {
  padding: 8% 0;
  overflow: hidden;
  margin-top: 18rpx;
}

.board_con .way > view image {
  width: 31rpx;
  height: 31rpx;
  float: left;
  margin-top: 6rpx;
}

.board_con .way > view text {
  font-size: 32rpx;
  padding-left: 10rpx;
  line-height: 36rpx;
  float: left;
}

.board {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
}

.board_con .commit {
  width: 80%;
  border-radius: 8rpx;
  display: block;
  margin: 26rpx auto 0;
  font-size: 32rpx;
  line-height: 80rpx;
  background: #e73f09;
  color: white;
  border: none;
  outline: none;
  text-align: center;
}

.get_phone{
  position: absolute;
  width: 90%;
  height: 80rpx;
  opacity: 0;
}

.get_phone::after{
  border: none;
}