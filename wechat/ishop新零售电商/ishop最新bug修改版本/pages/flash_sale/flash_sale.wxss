page {
  background: #f6f6f6;
}

.wrap-sale {
  width: 100%;
  height: auto;
}

.empty {
  margin-top: 30%;
  text-align: center;
  font-size: 34rpx;
}

.empty image {
  width: 356rpx;
  height: 328rpx;
}

.limit_list {
  border-bottom: 1px solid #f0f0f0;
}

.limit_list > view {
  overflow: hidden;
  width: 100%;
  background: white;
}

.limit_list .time {
  float: left;
  width: 20%;
  text-align: center;
  color: #333;
  font-size: 26rpx;
  padding: 10rpx 0;
}

.limit_list .time text {
  display: block;
  font-size: 24rpx;
  line-height: 40rpx;
}

.limit_list .cur {
  color: #e73f09;
}

.flash_info {
  width: 100%;
  height: 90rpx;
  overflow: hidden;
}

.flash_info text {
  font-size: 28rpx;
  line-height: 90rpx;
  margin-left: 30rpx;
}

.flash_info .right {
  float: right;
  margin-right: 8rpx;
}

.flash_info .right .time {
  margin-left: 5rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 14rpx;
  display: inline-block;
}

.flash_info .right > text {
  font-size: 26rpx;
  line-height: 90rpx;
  color: #666;
}

.flash_info .right .time text {
  background: #232323;
  color: white;
  text-align: center;
  margin: 0 6rpx;
  width: 48rpx;
  display: inline-block;
  border-radius: 4rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  padding-top: 5rpx;
}

.limit_con .content {
  width: 100%;
  /* height: 300rpx; */
  padding: 10rpx 0;
  position: relative;
  border-bottom: 2rpx solid #f6f6f6;
  background: white;
}

.limit_con .content image {
  width: 230rpx;
  height: 160rpx;
  position: absolute;
  top: 50%;
  margin-top: -80rpx;
  left: 10rpx;
  display: block;
}

.limit_con .goods_det {
  width: 62%;
  height: 180rpx;
  margin-left: 250rpx;
}

.limit_con .goods_det .title {
  font-size: 24rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 80rpx;
}

.limit_con .goods_det > view {
  overflow: hidden;
}

.limit_con .goods_det .price {
  float: left;
  font-size: 30rpx;
  line-height: 56rpx;
  color: #e73f09;
  padding-top: 8rpx;
}

.limit_con .goods_det .price text {
  display: block;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #999;
  text-decoration: line-through;
}

.limit_con .goods_det .ope {
  float: right;
  text-align: right;
}

.limit_con .goods_det .ope .go {
  width: 140rpx;
  display: inline-block;
  font-size: 24rpx;
  line-height: 50rpx;
  color: #fff;
  background: #e73f09;
  border-radius: 4rpx;
  text-align: center;
  margin-top: 2rpx;
}

.limit_con .goods_det .ope .per {
  font-size: 24rpx;
  line-height: 28rpx;
  color: #666;
  margin-top: 10rpx;
  overflow: hidden;
}

.limit_con .goods_det .not_go {
  width: 140rpx;
  /* display: inline-block; */
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  color: #fff;
  background: #52b948;
  border-radius: 4rpx;
  text-align: center;
}
