.wrap-cre .tip view .note {
  font-size: 24rpx;
  line-height: 40rpx;
  display: inline-block;
  position: relative;
}

.wrap-cre .tip view .note::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #212121;
  position: absolute;
  left: -20rpx;
  top: 50%;
  margin-top: -4rpx;
}

.wrap-cre .tip view .note::after {
  content: '';
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #212121;
  position: absolute;
  right: -20rpx;
  top: 50%;
  margin-top: -4rpx;
}

.cate_list_group .date {
  text-align: center;
  font-size: 24rpx;
  line-height: 48rpx;
}

.wrap-cre .footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: white;
  border-top: 2rpx solid #f6f6f6;
}

.wrap-cre .footer > view {
  width: 100%;
  overflow: hidden;
}

.wrap-cre .footer > view > navigator > view {
  width: 33%;
  float: left;
  font-size: 30rpx;
  text-align: center;
  color: #7e7e7e;
  display: block;
  line-height: 80rpx;
}

.header1 .search {
  position: absolute;
  right: 3%;
  font-size: 24rpx;
  line-height: 50rpx;
  top: 50%;
  margin-top: -25rpx;
  color: #333;
  padding-left: 10rpx;
  padding-right: 10rpx;
  z-index: 9;
}
