.wrap-cre {
  width: 100%;
  height: auto;
  background: #f6f6f6;
}

.wrap-cre .header1 {
  width: 100%;
  background-color: white;
  border-top: 2rpx solid #f0f0f0;
  border-bottom: 2rpx solid #f0f0f0;
  height: 100rpx;
}

.wrap-cre .header1 > view {
  position: relative;
  float: left;
  width: 96%;
  margin-left: 3%;
  margin-top: 18rpx;
}

.wrap-cre .header1 > view input {
  /* width: 100%; */
  display: block;
  font-size: 24rpx;
  line-height: 60rpx;
  height: 60rpx;
  border: none;
  background: #f6f6f6;
  border-radius: 16rpx;
  padding-left: 50rpx;
  padding-right: 100rpx;
}

.wrap-cre .header1 > view image {
  width: 50rpx;
  height: 50rpx;
  transform: scale(0.6);
  /* left: 98%; */
  top: 50%;
  margin-top: -25rpx;
  position: absolute;
}

.wrap-cre .center {
  width: 100%;
  height: auto;
  position: relative;
}

.wrap-cre .center .info {
  position: relative;
}

.wrap-cre .center .info .pic1 {
  width: 100%;
  display: block;
  height: 360rpx;
}

.wrap-cre .center .info .pic2 {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  left: 50%;
  margin-left: -70rpx;
  top: 289rpx;
  border-radius: 100%;
  border: 6rpx solid white;
  overflow: hidden;
}

.wrap-cre .center .info .pic3 {
  left: 40%;
  top: 50%;
  width: 140rpx;
  height: 140rpx;
  border-radius: 100%;
}

.wrap-cre .center .name {
  background-color: white;
  text-align: center;
  padding-top: 80rpx;
  padding-bottom: 4.5%;
}

.wrap-cre .center .name > view:nth-of-type(1) {
  font-size: 28rpx;
  line-height: 1.5;
  position: relative;
}

.self-support {
  color: white;
  background: #e73f09;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  padding: 0 10rpx;
}

.wrap-cre .center .name > view:nth-of-type(2) {
  font-size: 24rpx;
  line-height: 1.5;
}

.wrap-cre .center .collection {
  position: absolute;
  right: 3%;
  top: 60rpx;
  font-size: 24rpx;
  line-height: 1;
  width: 16%;
  text-align: center;
}

.wrap-cre .center .collection image {
  width: 80%;
  height: 100rpx;
}

.wrap-cre .main {
  width: 100%;
  background: white;
  margin-top: 1%;
  height: 80rpx;
  color: #727272;
}

.wrap-cre .main .list {
  width: 100%;
  padding-top: 20rpx;
  background: white;
  height: 60rpx;
}

.wrap-cre .main .list > view {
  width: 25%;
  float: left;
  text-align: center;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f9f9f9;
  padding-bottom: 20rpx;
  background: white;
}

.wrap-cre .main .list .cur text {
  border-bottom: 1px solid #e73f09;
  color: #e73f09;
  padding-bottom: 20rpx;
}

.yhq1 {
  margin: 10px 0;
}

.yhq1 > view {
  width: 30%;
  float: left;
  margin-left: 2.5%;
  position: relative;
}

.yhq1 image {
  width: 100%;
  display: block;
  height: 125rpx;
}

.wrap-cre .yhq1 .dollar {
  font-size: 40rpx;
  top: 28%;
  left: 8%;
  position: absolute;
  color: white;
}

.wrap-cre .yhq1 .price {
  font-size: 68rpx;
  top: 4%;
  left: 24%;
  position: absolute;
  color: white;
}

.wrap-cre .yhq1 .use {
  font-size: 24rpx;
  bottom: 2%;
  left: -4%;
  transform: scale(0.8);
  display: block;
  width: 80%;
  text-align: center;
  position: absolute;
  color: white;
}

.wrap-cre .banner {
  width: 100%;
  overflow: hidden;
}

.left_banner {
  float: left;
  width: 66%;
  overflow: hidden;
}

.left_banner image {
  display: block;
  width: 100%;
  height: 610rpx;
}

.right_banner {
  float: right;
  width: 33%;
  overflow: hidden;
}

.right_banner image {
  width: 100%;
  height: 176rpx;
}

.wrap-cre .like {
  background: white;
  width: 100%;
}

.like > view {
  text-align: center;
  font-size: 30rpx;
  line-height: 3;
  width: 30%;
  margin: 0px auto;
  position: relative;
}

.like image {
  width: 215rpx;
  height: 41rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -113rpx;
}

.list_group {
  width: 98%;
  height: auto;
  padding: 0 1%;
  margin-top: 10rpx;
  overflow: hidden;
}

.list_group > view:nth-of-type(2n+1) {
  margin-left: 0;
}

.list_group > view {
  width: 48.5%;
  margin-left: 1%;
  float: left;
  background: white;
  margin-bottom: 1%;
  padding-bottom: 10rpx;
}

.list_group view .pic {
  width: 100%;
  position: relative;
}

.list_group view .pic image {
  display: block;
  width: 100%;
  height: 300rpx;
}

.list_group view .title {
  width: 94%;
  padding: 0 3%;
  margin: 8rpx auto;
  font-size: 24rpx;
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.list_group .price {
  width: 100%;
  padding: 0 3%;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #e73f09;
}

.list_group .sale_num {
  line-height: 36rpx;
  font-size: 24rpx;
  text-align: center;
  padding-right: 10rpx;
  color: #333;
  float: right;
}

.list_title {
  padding-right: 80rpx;
  overflow: hidden;
  font-size: 26rpx;
  line-height: 80rpx;
  background: #fff;
  border-top: 2rpx solid #d2d2d2;
  border-bottom: 2rpx solid #d2d2d2;
  position: relative;
}

.list_title .list {
  width: 100%;
  overflow: hidden;
  color: #727272;
}

.list_title .list .title {
  width: 25%;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.list_title .list .title view {
  width: 20rpx;
}

.list_title .choose {
  width: 80rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.list_title .choose:before {
  position: absolute;
  width: 2rpx;
  height: 100%;
  left: 0;
  background: #d2d2d2;
  top: 0;
  content: '';
}

.list_title .choose image {
  width: 40rpx;
  height: 40rpx;
  padding: 20rpx;
}

.caret {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 2px;
  vertical-align: middle;
  border-top: 4px solid;
  border-right: 4px solid transparent;
  border-left: 4px solid transparent;
  float: left;
}

.caret.up {
  transform: rotate(180deg);
  margin-bottom: 2px;
}

.list_title .list .active .word {
  color: #e60321;
}

.caret.change {
  color: #e60321;
}

.wrap-cre .tip {
  text-align: center;
  padding-top: 2%;
}

