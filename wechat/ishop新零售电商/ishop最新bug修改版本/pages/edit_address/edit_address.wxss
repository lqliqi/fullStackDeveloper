page {
  background: #f6f6f6;
}

.cart_head {
  width: 100%;
  overflow: hidden;
  background: #fff;
}

.cart_head button {
  float: right;
  margin-right: 3%;
  font-size: 24rpx;
  line-height: 72rpx;
  background: none;
  border: none;
}

.cart_head button::after {
  border: none;
}

.info {
  background: white;
  width: 100%;
}

.info > view {
  width: 90%;
  margin-left: 3%;
  overflow: hidden;
  font-size: 30rpx;
  padding: 3% 2%;
  color: #212121;
  position: relative;
  border-bottom: 2rpx solid #f6f6f6;
}

.info view text {
  float: left;
  display: block;
  font-size: 30rpx;
  line-height: 54rpx;
}

.info view input {
  float: right;
  width: 75%;
  font-size: 30rpx;
  display: block;
}

.info > view image {
  width: 16rpx;
  height: 20rpx;
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  right: 0;
}

.info > view textarea {
  float: left;
  width: 75%;
  font-size: 28rpx;
  margin-left: 3%;
  height: 120rpx;
  margin-top: 10rpx;
  line-height: 40rpx;
}

.detail {
  position: relative;
  width: auto;
  padding: 20rpx 0 20rpx 144rpx !important;
}

.detail text {
  position: absolute;
  left: 2%;
  top: 20rpx;
  float: none;
}

.detail textarea {
  display: block;
  width: 100%;
}

.picker_con {
  font-size: 30rpx;
  line-height: 54rpx;
  overflow: hidden;
  padding-left: 144rpx;
  position: relative;
  height: 54rpx;
}

.picker_con text {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 30rpx;
  line-height: 54rpx;
}

.picker_con .picker {
  height: 54rpx;
}

.save {
  bottom: 0;
  width: 100%;
  height: 80rpx;
  background: #e73c0a;
  font-size: 34rpx;
  color: white;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
}

