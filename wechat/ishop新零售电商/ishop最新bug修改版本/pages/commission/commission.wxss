.main {
  width: 100%;
  position: relative;
}

.main > image {
  display: block;
  width: 100%;
  height: 323rpx;
}

.main .cur {
  position: absolute;
  display: block;
  width: 100%;
  text-align: center;
  top: 50%;
  margin-top: -60rpx;
  color: white;
  font-size: 38rpx;
  line-height: 1.5;
}

.commission_balance {
  display: block;
  font-size: 60rpx;
}

.balance {
  display: block;
}

.list {
  overflow: hidden;
  background-color: white;
  padding: 3% 0;
}

.list view {
  float: left;
  text-align: center;
  font-size: 28rpx;
  width: 33%;
}

.list view:not(.num) {
  border-right: 1rpx solid #f4f4f4;
}

.wrap-yj .content {
  width: 94%;
  background: white;
  margin: 3% auto 0;
  border-radius: 6rpx;
}

.tip {
  text-align: center;
  padding: 2% 0;
  border-bottom: 1rpx solid #fafafa;
}

.tip .cir {
  width: 8rpx;
  height: 8rpx;
  border-radius: 2px;
  background: #212121;
  margin-top: 16rpx;
}

.tip .note {
  font-size: 28rpx;
  white-space: pre;
}

.tip view {
  display: inline-block;
  overflow: hidden;
}

.tip text {
  float: left;
}

.tip view {
  display: inline-block;
  overflow: hidden;
}

.article {
  margin-top: -2%;
  text-align: center;
  padding: 3% 3% 0;
  background: #f6f6f6;
  position: relative;
}

.article image {
  width: 100%;
  height: 260rpx;
  margin-left: 46rpx;
}

.article>view {
  width: 100%;
  background: #fff;
  border-radius: 8rpx 8rpx 0 0;
}

#frhy view {
  color: #e73c0a;
}

.article .num_con {
  position: absolute;
  top: 115rpx;
  left: 42%;
}

.article view text.balance {
  width: 100%;
  text-align: center;
  font-size: 56rpx;
  line-height: 1;
  vertical-align: middle;
  padding-top: 2%;
}

.article view text.yuan {
  font-size: 28rpx;
  line-height: 1;
}

#br view {
  color: #fec447;
}

#list view {
  width: 49.5%;
}

.footer {
  width: 100%;
  height: 80rpx;
  background: white;
  position: fixed;
  bottom: 0;
}

.footer > view {
  width: 33%;
  float: left;
  overflow: hidden;
}

.footer view text {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  display: block;
  line-height: 80rpx;
}

.footer view button {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  display: block;
  line-height: 80rpx;
  background: white;
}

.footer view button::after {
  border: none;
}

.footer view text:not(.last) {
  border-right: 1px solid #f6f6f6;
}

#last {
  padding-bottom: 80rpx;
}

.list_1 {
  width: 94%;
  margin: 0 auto;
  background: white;
  border-radius: 0 0 8rpx 8rpx;
}
