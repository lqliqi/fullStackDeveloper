.wrap {
  width: 100%;
  height: auto;
  background-color: #f6f6f6;
}

.pay_way {
  width: 100%;
  height: auto;
  background: white;
  margin-top: 10rpx;
}

.pay_way>view {
  width: 94%;
  margin: 0 auto;
  overflow: hidden;
  border-bottom: 2rpx solid #e9e9e9;
}

.pay_way .title {
  float: left;
  font-size: 28rpx;
  line-height: 88rpx;
}

.pay_way .way {
  float: right;
  overflow: hidden;
}

.pay_way .way > view > view {
  overflow: hidden;
  padding: 20rpx 14rpx 20rpx 44rpx;
  display: inline-block;
  font-size: 28rpx;
  line-height: 48rpx;
  font-weight: normal;
  margin-bottom: 0;
}

.pay_way .way>view:first-child {
  margin-left: 0;
}

.pay_way>view:last-child {
  border-bottom: none;
}

.pay_way .way image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-top: 8rpx;
  margin-right: 10rpx;
}

.account {
  float: right;
  text-align: right;
  border: none;
  outline: none;
  font-size: 28rpx;
  line-height: 48rpx;
  padding: 20rpx 0;
}

.money {
  padding: 0 0 20rpx 60rpx;
  position: relative;
}

.money input {
  display: block;
  font-size: 24rpx;
  line-height: 68rpx;
  border: none;
  outline: none;
  color: #333;
  width: 100%;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 10rpx 0;
}

.money .rmb {
  position: absolute;
  font-size: 48rpx;
  line-height: 68rpx;
  color: #333;
  left: 0;
  top: 0;
}

.money > view {
  overflow: hidden;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #999;
  padding: 20rpx 0 0;
}

.money>view text {
  color: #0d89e1;
  float: right;
  padding: 10rpx;
  margin-top: -7rpx;
}

.confirm {
  width: 94%;
  margin: 60rpx auto 0;
  font-size: 32rpx;
  line-height: 80rpx;
  background: #ddd;
  text-align: center;
  border-radius: 8rpx;
  color: #666;
}

.board {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  left: 0;
}

.pass_con {
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.pass_con .title {
  text-align: center;
  width: 94%;
  margin: 0 auto;
  position: relative;
  font-size: 32rpx;
  line-height: 80rpx;
}

.pass_con .title image {
  width: 22rpx;
  height: 40rpx;
  position: absolute;
  left: -10rpx;
  top: 50%;
  margin-top: -30rpx;
  padding: 10rpx;
}

.ope {
  overflow: hidden;
  width: 94%;
  margin: 0 auto;
  font-size: 24rpx;
  line-height: 80rpx;
}

.ope .alter {
  float: left;
  display: block;
  padding: 0 10rpx;
}

.ope .forget {
  float: right;
  display: block;
  padding: 0 10rpx;
}

.num_list {
  width: 100%;
  overflow: hidden;
}

.num_list .num, .num_list .none, .num_list .del {
  width: 33.3%;
  position: relative;
  border-top: 2rpx solid #8e8e8e;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  line-height: 96rpx;
  height: 96rpx;
}

.num_list view::after {
  content: '';
  position: absolute;
  top: 0;
  width: 2rpx;
  height: 100%;
  background: #8e8e8e;
  left: 0;
}

.num_list view:nth-child(3n+1)::after {
  width: 0;
}

.num_list .none, .num_list .del {
  background: #d2d5da;
}

.num_list .del image {
  width: 52rpx;
  height: 42rpx;
}

.pass_num {
  width: 94%;
  margin: 0 auto;
  border: 1px solid #e9e9e9;
  overflow: hidden;
  border-radius: 6px;
  display: flex;
  align-content: space-around;
}

.pass_det {
  overflow: hidden;
  width: 100%;
  height: 80rpx;
}

.pass_num .dotted {
  border-right: 2rpx solid #e9e9e9;
  width: 16.4%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
}

.pass_num .none {
  border-right: 2rpx solid #e9e9e9;
  width: 16.4%;
  height: 80rpx;
  line-height: 80rpx;
  float: left;
}

.pass_num .dotted view {
  width: 16rpx;
  height: 16rpx;
  background: #333;
  border-radius: 10rpx;
}

.pass_num .dotted:last-child {
  border-right: none;
}
