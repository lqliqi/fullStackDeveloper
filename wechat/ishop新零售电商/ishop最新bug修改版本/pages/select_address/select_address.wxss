page {
  background: #f6f6f6;
}

.cart_head {
  margin-top: 2rpx;
  width: 100%;
  overflow: hidden;
  background: #fff;
}

.board {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 101;
}

.cart_head button {
  float: right;
  margin-right: 3%;
  font-size: 24rpx;
  line-height: 72rpx;
  background: none;
  border: none;
}

.cart_head button::after {
  border: none;
}

.list {
  width: 100%;
  font-size: 28rpx;
}

.list > view {
  margin-bottom: 2%;
  background: white;
  padding: 3%;
}

.list > view:not(last-child) {
  margin-bottom: 0 !important;
}

.list .cur {
  color: #e73c0a;
  line-height: 60rpx;
}

.list text {
  display: block;
  line-height: 60rpx;
}
