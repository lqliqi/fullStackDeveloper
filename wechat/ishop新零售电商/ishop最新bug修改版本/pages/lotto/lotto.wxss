page {
  background: #f6f6f6;
}

.top-tab {
  width: 100%;
  height: 90rpx;
  background: #fff;
  color: #e73c0a;
  font-size: 28rpx;
  line-height: 90rpx;
  margin: 2rpx 0 0 0;
}

.toptab {
  width: 33%;
  float: left;
  text-align: center;
  color: #212121;
  position: relative;
}

.toptab.active {
  color: #e73c0a;
  /* border-bottom: solid 2px #e73c0a;  */
}

.toptab.active::after {
  content: '';
  width: 100rpx;
  height: 4rpx;
  background: #e73c0a;
  position: absolute;
  right: 50%;
  margin-right: -50rpx;
  bottom: 0rpx;
}

.list {
  width: 100%;
  height: auto;
  margin-top: 2rpx;
}

.left {
  float: left;
  width: 30%;
  margin: 10rpx 20rpx 10rpx 3%;
  height: 200rpx;
}

.left image {
  display: block;
  width: 100%;
  height: 100%;
}

.right {
  float: left;
  width: 60%;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}

.submit {
  margin-top: 2rpx;
  width: 100%;
  height: 90rpx;
  background: white;
  overflow: hidden;
}

.submit > view {
  float: right;
  right: 0;
  width: 160rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 58rpx;
  border: 2rpx solid #e73c0a;
  border-radius: 8rpx;
  margin-right: 16rpx;
  color: #e73c0a;
  margin-top: 17rpx;
}

.submit .cur {
  color: #666;
  border-color: #666;
}

.empty {
  margin-top: 30%;
  text-align: center;
  font-size: 34rpx;
}

.empty image {
  width: 356rpx;
  height: 328rpx;
}
