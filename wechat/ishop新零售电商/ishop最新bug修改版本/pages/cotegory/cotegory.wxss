page {
  background: #f5f5f5;
}

.cate_con {
  width: 100%;
  height: auto;
}

.cate_head {
  width: 94%;
  overflow: hidden;
  position: relative;
  margin: 0 auto;
  padding: 10rpx 3%;
  background: #fff;
}

.cate_head .back {
  position: absolute;
  width: 24rpx;
  height: 42rpx;
  top: 50%;
  margin-top: -21rpx;
  left: 3%;
}

.cate_head .search_head {
  width: 80%;
  overflow: hidden;
  background: #f5f5f5;
  position: relative;
  padding: 6rpx 0;
  float: left;
}

.cate_head text {
  /* position: absolute;
  right: 50rpx;
  top: 50%;
  margin-top: -10rpx; */
  float: left;
  font-size: 30rpx;
  line-height: 40rpx;
  display: block;
  padding: 12rpx;
}

.cate_head .search_head .search_icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 50%;
  margin-top: -16rpx;
  left: 10rpx;
}

.cate_head .search_head input {
  margin-left: 60rpx;
  font-size: 24rpx;
  line-height: 40rpx;
}

.cate_head .icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 50%;
  margin-top: -22rpx;
  right: 3%;
}

.list_title {
  width: 100%;
  overflow: hidden;
  font-size: 26rpx;
  line-height: 40rpx;
  background: #fff;
  border-top: 2rpx solid #f6f6f6;
}

.list_title .list {
  width: 75%;
  float: left;
  overflow: hidden;
  padding: 16rpx 0;
}

.list_title .list .title {
  width: 33.3%;
  float: left;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.list_title .list .title view {
  width: 20rpx;
}

.list_title .choose {
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
  float: left;
  padding: 16rpx 0;
  position: relative;
}

.list_title .choose image {
  width: 26rpx;
  height: 26rpx;
  margin-left: 6rpx;
}

.caret {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: 4rpx;
  vertical-align: middle;
  border-top: 8rpx solid rgb(174, 174, 174);
  border-right: 8rpx solid transparent;
  border-left: 8rpx solid transparent;
  float: left;
}

.caret.up {
  transform: rotate(180deg);
  margin-bottom: 2px;
}

.caret.cur {
  border-top: 8rpx solid #e73f09;
}

.list_title .list .title.active {
  color: #e73f09;
}

.choose.active {
  color: #e73f09;
}


.condition_con {
  width: 100%;
  height: 100%;
  background: #fff;
  z-index: 9999;
  position: relative;
  border-top: 2rpx solid #f6f6f6;
}

.condition_con .condition {
  width: 94%;
  margin: 0 auto;
  position: relative;
}

.condition_con .condition .title {
  position: absolute;
  left: 0;
  top: 0;
  font-size: 24rpx;
  line-height: 80rpx;
}

.condition_con .condition .input_text {
  margin-left: 250rpx;
  overflow: hidden;
  padding: 14rpx 0;
}

.condition_con .condition .input_text input {
  float: left;
  border-radius: 8rpx;
  width: 150rpx;
  height: auto;
  min-height: auto;
  font-size: 24rpx;
  line-height: 74rpx;
  background: #f6f6f6;
  padding: 0 10rpx;
  text-align: center;
}

.condition_con .condition .input_text text {
  float: left;
  margin: 0 10rpx;
}

.ope_foot {
  width: 94%;
  padding: 3%;
  position: fixed;
  left: 0;
  bottom: 0;
  overflow: hidden;
}

.ope_foot button {
  width: 46.5%;
  border: none;
  border-radius: 6rpx;
  padding: 0;
  font-size: 28rpx;
  line-height: 80rpx;
}

.ope_foot button::after {
  border: none;
}

.ope_foot  .reset {
  background: none;
  border: 2rpx solid #e73f09;
  color: #e73f09;
  float: left;
}

.ope_foot  .submit {
  background: #e73f09;
  border: 2rpx solid #e73f09;
  float: right;
  color: #fff;
}

.anim {
  transform: rotate(-90deg);
}
