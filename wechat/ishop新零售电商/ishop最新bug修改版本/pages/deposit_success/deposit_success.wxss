page {
  background: #f6f6f6;
}

.success {
  width: 100%;
  height: 100vh;
  background: white;
}

.icon {
  margin-top: 2rpx;
  text-align: center;
}

.icon image {
  margin-top: 15%;
  width: 160rpx;
  height: 160rpx;
}

.icon {
  font-size: 36rpx;
  color: #e73c0a;
  line-height: 2;
}

.title {
  margin-top: 10%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title image {
  width: 40rpx;
  height: 42rpx;
}

.title text {
  font-size: 30rpx;
  margin-left: 10rpx;
}

.type {
  overflow: hidden;
  margin-top: 10%;
}

