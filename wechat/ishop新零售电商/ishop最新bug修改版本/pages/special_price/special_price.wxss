page {
  background: #f6f6f6;
}

.wrap-off {
  width: 100%;
  height: auto;
}

.empty {
  margin-top: 30%;
  text-align: center;
  font-size: 34rpx;
}

.empty image {
  width: 356rpx;
  height: 328rpx;
}

.wrap-off .tabcon {
  width: 100%;
  height: auto;
}

.wrap-off .tabcon .cur {
  display: block;
}

.wrap-off .tabcon .list {
  width: 100%;
  overflow: hidden;
}

.wrap-off .tabcon .list > view:nth-child(2n+1) {
  margin-left: 0;
}

.wrap-off .tabcon .list > view {
  width: 48.5%;
  margin-left: 1%;
  float: left;
  background: white;
  margin-top: 1%;
  padding-bottom: 2%;
}

.wrap-off .tabcon .list .goods {
  width: 100%;
  position: relative;
}

.wrap-off .tabcon .list .goods image {
  width: 100%;
  height: 290rpx;
  display: block;
}

.wrap-off .tabcon .list .goods text {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.3);
  padding: 1% 4%;
  color: white;
}

.wrap-off .tabcon .list .goods_title {
  width: 90%;
  margin: 2% auto;
  font-size: 24rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #212121;
  height: 80rpx;
}

.wrap-off .tabcon .list .price {
  width: 90%;
  margin: 1% auto;
  color: #e02e24;
  font-size: 28rpx;
}

.wrap-off .tabcon .list .price text {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 20rpx;
}

.board {
  background: rgba(0, 0, 0, 0.5);
  top: 76rpx;
  position: fixed;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.tablist {
  margin-top: 2prx;
  margin-bottom: 2rpx;
  /* width: 100%; */
  height: auto;
  padding-right: 5%;
  overflow: hidden;
  position: relative;
}

.tablist > view {
  width: 95%;
}

.more {
  background: white;
  border-left: 2rpx solid #eee;
  position: absolute;
  width: 70rpx !important;
  height: 70rpx;
  right: 0;
  top: 0;
  text-align: center;
}

.tablist image {
  width: 20rpx;
  height: 12rpx;
}

.tablist .swiper {
  padding: 0 3%;
  overflow: hidden;
  background: white;
  text-align: center;
  height: 70rpx;
}

.swiper-slide {
  text-align: center;
  font-size: 28rpx;
  line-height: 70rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
}

.swiper-slide text {
  position: relative;
  display: inline-block;
}

.active text {
  color: #e73c0a;
}

.active text::after {
  content: '';
  width: 100%;
  height: 4rpx;
  background: #e73c0a;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}

.classify {
  background: white;
  position: fixed;
  top: 76rpx;
  width: 100%;
  left: 0;
  z-index: 10;
  padding-bottom: 2%;
}

.classify_item {
  width: 22.5%;
  text-align: center;
  float: left;
  margin: 2% 0 0 2%;
  background: #f6f6f6;
  color: #666;
  font-size: 26rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
}
