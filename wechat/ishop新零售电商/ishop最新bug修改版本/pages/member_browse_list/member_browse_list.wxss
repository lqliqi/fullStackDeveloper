page {
  background: #f6f6f6;
}

.wrap {
  width: 100%;
  height: auto;
}

.cart_head {
  width: 100%;
  overflow: hidden;
  background: #fff;
  margin-top: 2rpx;
}

.board {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 101;
}

.empty {
  margin-top: 30%;
  text-align: center;
  font-size: 34rpx;
}

.empty image {
  width: 356rpx;
  height: 328rpx;
}

.cart_head button {
  float: right;
  margin-right: 3%;
  font-size: 24rpx;
  line-height: 72rpx;
  background: none;
  border: none;
}

.cart_head button::after {
  border: none;
}

.time {
  padding-left: 3%;
  font-size: 28rpx;
  line-height: 2;
  color: #212121;
}

.tc {
  width: 94%;
  padding: 0% 3%;
  overflow: hidden;
  background: white;
  margin-bottom: 1%;
  position: relative;
}

.tc1 {
  width: 100%;
}

.tc .tc1 .center {
  width: 94%;
  position: relative;
  padding: 5px 3% 5px 3% !important;
  background: white;
  overflow: hidden;
  border-bottom: 2rpx solid #f6f6f6;
  color: #333;
}

.tc .tc1 .center .good {
  overflow: hidden;
  position: relative;
}

.select {
  width: 60rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.select image {
  width: 30rpx;
  height: 30rpx;
}

.center image {
  width: 32%;
  height: 180rpx;
  display: block;
  float: left;
}

.center .det {
  width: 65%;
  float: right;
  height: 180rpx;
}

.center .det text {
  padding: 1% 0;
  font-size: 24rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 80rpx;
}

.center .price {
  overflow: hidden;
  float: left;
}

.center .price > view {
  display: block;
  float: left;
  font-size: 28rpx;
  color: #e73f09;
  line-height: 1;
  margin-top: 60rpx;
}

.footer {
  position: fixed;
  background: white;
  width: 100%;
  bottom: 0;
  border-top: 2rpx solid #f3f3f3;
}

.footer .all {
  width: 100%;
  overflow: hidden;
}

.footer .all .choose {
  float: left;
  overflow: hidden;
  vertical-align: middle;
  position: relative;
  padding: 20rpx 15rpx;
}

.choose image {
  width: 30rpx;
  height: 30rpx;
  float: left;
}

.choose text {
  float: left;
  font-size: 28rpx;
  color: #727272;
  line-height: 30rpx;
  margin-left: 20rpx;
}

.footer .all .total {
  float: right;
  font-size: 28rpx;
  line-height: 30rpx;
  padding: 20rpx 0;
  background-color: #e73f09;
  height: 100%;
  color: white;
  width: 180rpx;
  text-align: center;
}
