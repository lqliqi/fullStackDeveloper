.wrap {
  width: 100%;
  height: auto;
  background-color: #f6f6f6;
}

.center {
  width: 100%;
  height: auto;
  position: relative;
}

.center .info {
  position: relative;
}

.center .info .pic1 {
  width: 100%;
  display: block;
  height: 360rpx;
}

.center .info .pic2 {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  left: 50%;
  margin-left: -70rpx;
  top: 289rpx;
  border-radius: 100%;
  border: 6rpx solid white;
  overflow: hidden;
}

.center .info .pic3 {
  left: 40%;
  top: 50%;
  width: 140rpx;
  height: 140rpx;
  border-radius: 100%;
}

.center .name {
  background-color: white;
  text-align: center;
  padding-top: 80rpx;
  padding-bottom: 4.5%;
}

.center .name > view:nth-of-type(1) {
  font-size: 28rpx;
  line-height: 1.5;
  position: relative;
}

.center .collection {
  position: absolute;
  right: 3%;
  top: 60rpx;
  font-size: 24rpx;
  line-height: 1;
  width: 16%;
  text-align: center;
}

.center .collection image {
  width: 80%;
  height: 100rpx;
}

.self-support {
  color: white;
  background: #e73f09;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  padding: 0 10rpx;
}

.dp-info {
  margin-top: 1%;
}

.dp-info > view {
  width: 100%;
  background: white;
}

.dp-info > view > view {
  width: 97%;
  margin-left: 3%;
  font-size: 24rpx;
  line-height: 80rpx;
  color: #393939;
  border-bottom: 2rpx solid #f2f2f2;
}
