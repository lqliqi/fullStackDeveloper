page {
  background: #f6f6f6;
}

.wrap {
  height: auto;
  background-color: #f6f6f6;
}

.top-tab {
  width: 100%;
  height: 90rpx;
  background: #fff;
  color: #e73c0a;
  font-size: 28rpx;
  line-height: 90rpx;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.toptab {
  width: 20%;
  float: left;
  text-align: center;
  color: #727272;
}

.toptab.active {
  color: #e73c0a;
  border-bottom: solid 2px #e73c0a;
}

.tabcon .cur {
  display: block;
  overflow: hidden;
}

.tabcon .shop {
  font-size: 28rpx;
  line-height: 3;
  background: white;
  padding-left: 3%;
  margin-top: 1%;
  overflow: hidden;
}

.tabcon .shop .shop_title {
  float: left;
  color: #212121;
  white-space: pre;
}

.tabcon .shop image {
  float: left;
  width: 6px;
  height: 10px;
  margin-top: 16px;
  margin-left: 8rpx;
}

.tabcon .right1 {
  float: right;
  color: #e02e24;
  margin-right: 3%;
}

.tabcon .content {
  overflow: hidden;
  margin-top: 1%;
  border-bottom: 2rpx solid #f0f0f0;
  position: relative;
  padding: 10rpx 3% 10rpx 240rpx;
  height: 180rpx;
  background:white;

}

.tabcon .content .left {
  position: absolute;
  top: 50%;
  left: 3%;
  width: 90px;
  height: 180rpx;
  margin-top: -90rpx;
}

.tabcon .content .left image {
  display: block;
  width: 180rpx;
  height: 180rpx;
}

.tabcon .content .right {
  width: 100%;
}

.right .title {
  overflow: hidden;
  font-size: 24rpx;
  margin-top: 10rpx;
  height: 64rpx;
  min-height: 64rpx;
}

.right .type {
  font-size: 24rpx;
  line-height: 2;
  color: #b7b7b7;
}

.right .type text {
  font-size: 28rpx;
  float: right;
}

.tabcon .content .right .price {
  font-size: 36rpx;
  color: #e02e24;
  overflow: hidden;
  width: 100%;
}

.right .price > view:nth-of-type(1) {
  float: left;
  font-size: 28rpx;
  line-height: 2;
  color: #e02e24;
}

.statistics {
  margin-top: 1%;
  font-size: 24rpx;
  line-height: 80rpx;
  width: 100%;
  background: white;
  overflow: hidden;
}

.statistics > view {
  float: right;
  margin-right: 3%;
}

.tabcon .order {
  width: 94%;
  float: left;
  padding: 2% 3%;
  border-top: 2rpx solid #f0f0f0;
  background: white;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 1.5%;
}

.tabcon .order .operate {
  float: right;
  display: block;
  font-size: 24rpx;
  line-height: 2;
  border: 1px solid #e02e24;
  width: 160rpx;
  text-align: center;
  border-radius: 8rpx;
  margin-left: 2%;
  color: #e02e24;
}

.tabcon .order .operates {
  float: right;
  display: block;
  font-size: 24rpx;
  line-height: 2;
  border: 1px solid #727272;
  width: 160rpx;
  text-align: center;
  border-radius: 8rpx;
  margin-left: 2%;
  color: #727272;
}

.empty {
  margin-top: 30%;
  text-align: center;
  font-size: 34rpx;
}

.empty image {
  width: 356rpx;
  height: 328rpx;
}
