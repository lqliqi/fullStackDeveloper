page{
  background: #f6f6f6;
}
.wrap-ppj {
  width: 100%;
  height: auto;
  background-color: #f6f6f6;
}

.wrap-ppj .tablist {
  width: 100%;
  background: white;
}

.wrap-ppj .tablist > view {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.wrap-ppj .tablist > view > view {
  width: 20%;
  float: left;
  text-align: center;
  font-size: 24rpx;
  line-height: 3;
  height: 80rpx;
}

.wrap-ppj .tablist .cur text {
  border-bottom: 2rpx solid #e73f09;
  color: #e73f09;
}

.wrap-ppj .tablist > view text {
  border-bottom: 2rpx solid white;
  padding-bottom: 20rpx;
}

.wrap-ppj  .brand {
  width: 100%;
  background: white;
  padding-bottom: 2%;
  overflow: hidden;
  border-bottom: 2rpx solid #f5f5f5;
  margin-top: 1%;
}

.wrap-ppj  .brand > view {
  width: 21%;
  margin-left: 3%;
  float: left;
  border: 2rpx solid #f9f9f9;
  margin-top: 2%;
}

.wrap-ppj .brand  image {
  height: 140rpx;
  width: 100%;
  display: block;
}

.empty {
  margin-top: 30%;
  text-align: center;
  font-size: 34rpx;
}

.empty image {
  width: 356rpx;
  height: 328rpx;
}
