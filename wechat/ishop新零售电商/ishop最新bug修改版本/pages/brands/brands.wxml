<wxs module="util" src="../../utils/util.wxs" />
<view class="wrap-ppj">
  <loading hidden="{{hidden}}">
    加载中...
  </loading>
  <view class='tablist'>
    <view>
      <view wx:for="{{classify_tab}}" wx:for-index="idx" data-idx="{{idx}}" class="{{currentNavtab==idx ? 'cur' : ''}}" bindtap="switchTab">
        <text>{{item.title}}</text>
      </view>
    </view>
  </view>
  <view class='empty' hidden='{{grand_list.length!=0}}'>
    <image src='/images/empty_iv_5.png'></image>
    <view>暂无相关品牌</view>
  </view>
  <view class='tabcon' hidden='{{grand_list.length==0}}'>
    <view class='brand'>
      <view wx:for="{{grand_list}}">
        <navigator hover-class='none' url='../shop_details/shop_details?shop_id={{item.shop_id}}'>
          <image src='{{util.HTTP + item.picUrl}}'></image>
        </navigator>
      </view>
    </view>
  </view>
</view>