page {
  background: #f6f6f6;
}

.content {
  border-bottom: 2rpx solid #f6f6f6;
  overflow: hidden;
  background: white;
  margin-top: 1%;
  position: relative;
  padding: 10rpx 3% 10rpx 250rpx;
  height: 204rpx;
}

.content .left {
  position: absolute;
  width: 232rpx;
  height: 184rpx;
  top: 50%;
  margin-top: -92rpx;
  left: 10rpx;
}

.content .left image {
  width: 100%;
  height: 100%;
  display: block;
}

.content .right {
  width: 100%;
}

.content .right .good_title {
  color: #212121;
  width: 100%;
  /* float: left; */
  font-size: 24rpx;
  line-height: 40rpx;
  height: 80rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.right .type {
  font-size: 24rpx;
  line-height: 2;
  color: #b7b7b7;
  height: 48rpx;
}

.right .type text {
  font-size: 28rpx;
  float: right;
}

.right .price {
  margin-top: 12rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  color: #e02e24;
}

.evaluate {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  float: right;
  width: 90rpx;
  color: #e02e24;
  background: white;
  border: 2rpx solid #e02e24;
  font-size: 30rpx;
  padding: 8rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.evaluated {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  float: right;
  width: 90rpx;
  color: #8b8b8b;
  background: white;
  border: 2rpx solid #8b8b8b;
  font-size: 30rpx;
  padding: 8rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
