/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.cate_list_group {
  width: 100%;
  overflow: hidden;
}

.cate_list_group .cate_list {
  float: left;
  width: 48%;
  /* height:468rpx; */
  margin-left: 1%;
  background: #fff;
  margin: 1%;
}

.cate_list_group .cate_list:nth-child(2n+1) {
  /* margin-left: 0; */
}

.cate_list_group .cate_pic {
  width: 100%;
  position: relative;
}

.cate_list_group .cate_pic image {
  display: block;
  width: 100%;
  height: 300rpx;
}

.cate_title {
  padding: 10rpx 0;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 24rpx;
  line-height: 36rpx;
  height: 60rpx;
}

.cate_det {
  padding: 0 3% 16rpx;
}

.cate_det .price {
  color: #e60321;
  font-size: 12px;
  line-height: 60rpx;
}

.cate_det  .ori_price {
  overflow: hidden;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #e60321;
}

.cate_det  .ori_price .price {
  float: left;
}

.cate_det  .ori_price .inter_pri {
  color: #333;
  float: right;
  line-height: 60rpx;
}

.list_cate_group {
  width: 100%;
  height: auto;
  background: #f5f5f5;
}

.list_cate_group .cate_list {
  width: 100%;
  overflow: hidden;
  background: #fff;
  /* padding: 10rpx 0; */
  margin-top: 10rpx;
  margin-left: 0;
}

.list_cate_group .cate_list navigator {
  display: block;
  width: 94%;
  margin: 0 auto;
  overflow: hidden;
}

.list_cate_group .cate_list .cate_pic {
  width: 32%;
  height: 200rpx;
  float: left;
}

.list_cate_group .cate_list .cate_pic image {
  height: 200rpx;
}

.list_cate_group .cate_det {
  width: 65%;
  float: left;
  padding-right: 0;
}

.list_cate_group .ori_price {
  /* border-bottom: 2rpx solid #E1E1E1; */
  margin-top: 58rpx;
}
